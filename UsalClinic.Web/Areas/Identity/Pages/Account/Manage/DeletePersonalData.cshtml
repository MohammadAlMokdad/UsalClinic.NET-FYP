@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h1 class="mb-3">@ViewData["Title"]</h1>
<hr />

<div class="alert alert-warning" role="alert">
    <strong>Warning:</strong> Deleting your account will <strong>permanently remove</strong> all your personal data. This action is irreversible.
</div>

<div class="row">
    <div class="col-md-6">
        <form id="delete-user" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            @if (Model.RequirePassword)
            {
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Your password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            }

            <button class="w-100 btn btn-lg btn-danger" type="submit">
                Delete My Account
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
