@page
@model EnableAuthenticatorModel
@{
    ViewData["Title"] = "Configure authenticator app";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3 class="mb-4">@ViewData["Title"]</h3>

<div>
    <p>To use an authenticator app, follow these steps:</p>
    <ol class="ps-3">
        <li class="mb-3">
            <p>
                Download an authenticator app like Microsoft Authenticator for
                <a href="https://go.microsoft.com/fwlink/?Linkid=825072" target="_blank">Android</a> /
                <a href="https://go.microsoft.com/fwlink/?Linkid=825073" target="_blank">iOS</a>,
                or Google Authenticator for
                <a href="https://play.google.com/store/apps/details?id=com.google.android.apps.authenticator2&hl=en" target="_blank">Android</a> /
                <a href="https://itunes.apple.com/us/app/google-authenticator/id388497605?mt=8" target="_blank">iOS</a>.
            </p>
        </li>
        <li class="mb-3">
            <p>
                Scan the QR code below or manually enter this key into your app:
                <kbd class="bg-light p-2 rounded">@Model.SharedKey</kbd>
            </p>
            <div class="alert alert-info">
                If you don't see a QR code, learn how to <a href="https://go.microsoft.com/fwlink/?Linkid=852423" target="_blank">enable QR code generation</a>.
            </div>
            <div id="qrCode" class="mb-3"></div>
            <div id="qrCodeData" data-url="@Model.AuthenticatorUri"></div>
        </li>
        <li>
            <p>Once setup is complete, enter the 6-digit code provided by your app:</p>
            <div class="row">
                <div class="col-md-6">
                    <form id="send-code" method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Code" class="form-control" autocomplete="off" placeholder="Code" />
                            <label asp-for="Input.Code">Verification Code</label>
                            <span asp-validation-for="Input.Code" class="text-danger"></span>
                        </div>
                        <button type="submit" class="w-100 btn btn-lg btn-primary">Verify</button>
                        <div asp-validation-summary="ModelOnly" class="text-danger mt-2" role="alert"></div>
                    </form>
                </div>
            </div>
        </li>
    </ol>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const qrData = document.getElementById("qrCodeData").dataset.url;
        if (qrData) {
            const qrCodeDiv = document.getElementById("qrCode");
            // If you're using a QR library like QRCode.js
            new QRCode(qrCodeDiv, {
                text: qrData,
                width: 200,
                height: 200
            });
        }
    </script>
}
