@model IEnumerable<UsalClinic.Web.ViewModels.FAQEntryViewModel>
@{
    ViewData["Title"] = "FAQ";
}

<style>
    .gradient-header {
        background: linear-gradient(135deg, #5ddcff, #00a1cb, #007acc);
        color: white;
    }
</style>

<h2 class="text-center text-primary mb-4">Frequently Asked Questions</h2>

<p class="text-end">
    <a class="btn btn-success" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Ask What You Desire
    </a>
</p>

<table class="table table-bordered table-hover">
    <thead class="gradient-header">
        <tr>
            <th>Question</th>
            <th>Answer</th>
            <th>Created At</th>
            @if (User.IsInRole("Admin"))
            {
                <th style="width: 150px;">Actions</th>
            }
        </tr>
    </thead>

    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var faq in Model)
            {
                <tr>
                    <td>@faq.Question</td>
                    <td>@faq.Answer</td>
                    <td>@faq.CreatedAt.ToString("yyyy-MM-dd")</td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td>
                            <button type="button" class="btn btn-sm btn-info me-1 btn-edit" data-id="@faq.Id">
                                <i class="bi bi-pencil"></i> Edit
                            </button>
                            <button type="button" class="btn btn-sm btn-danger btn-delete" data-id="@faq.Id">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </td>
                    }
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="@(User.IsInRole("Admin") ? 4 : 3)" class="text-center">No FAQs available.</td>
            </tr>
        }
    </tbody>

</table>

<!-- Edit FAQ Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header gradient-header">
                <h5 class="modal-title" id="editModalLabel">Edit FAQ</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="editModalBody">
                <!-- Partial content loaded via JS -->
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header gradient-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this FAQ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                <form id="deleteForm" method="post" asp-controller="FAQEntry" asp-action="Delete" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deleteId" value="" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                pageLength: 10,
                order: []
            });
        });
    </script>
    <script>
                const csrfToken = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

        // Globally add CSRF token to all fetch() or AJAX calls if needed
        function getCsrfHeaders() {
            return csrfToken
                ? { 'RequestVerificationToken': csrfToken }
                : {};
        }
        // Edit button click - loads partial view into modal
        document.querySelectorAll('.btn-edit').forEach(btn => {
            btn.addEventListener('click', () => {
                const id = btn.getAttribute('data-id');

                fetch(`/FAQEntry/Edit/${id}`)
                    .then(res => {
                        if (res.redirected) {
                            window.location.href = res.url;
                            return null;
                        }
                        if (res.status === 403) {
                            window.location.href = '/Account/AccessDenied';
                            return null;
                        }
                        return res.text();
                    })
                    .then(html => {
                        if (!html) return;
                        if (html.includes("<title>Access Denied</title>") || html.toLowerCase().includes("access denied")) {
                            window.location.href = '/Account/AccessDenied';
                            return;
                        }
                        document.getElementById('editModalBody').innerHTML = html;
                        const modal = new bootstrap.Modal(document.getElementById('editModal'));
                        modal.show();
                    });
            });
        });

        // Delete button click - open delete confirmation modal and set hidden input
        document.querySelectorAll('.btn-delete').forEach(btn => {
            btn.addEventListener('click', () => {
                const id = btn.getAttribute('data-id');
                document.getElementById('deleteId').value = id;
                const modal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
                modal.show();
            });
        });

        //Handle Empty Error Fields
             document.addEventListener('submit', function (e) {
            const form = e.target;
            if (form.closest('#editModal')) {
                e.preventDefault();

                fetch(form.action, {
                    method: 'POST',
                    body: new FormData(form),
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                        ...getCsrfHeaders()
                    }
                })
                .then(res => res.json().catch(() => null))
                .then(result => {
                    if (result?.success) {
                        location.reload(); // Reload on successful edit
                    } else {
                        // Re-fetch partial with validation messages
                        return fetch(form.action, {
                            method: 'POST',
                            body: new FormData(form),
                            headers: {
                                'X-Requested-With': 'XMLHttpRequest',
                                ...getCsrfHeaders()
                            }
                        })
                        .then(res => res.text())
                        .then(html => {
                            document.getElementById('editModalBody').innerHTML = html;
                        });
                    }
                })
                .catch(err => {
                    console.error("Error updating FAQ:", err);
                    location.reload(); 
                });
            }
        });
    </script>
}
