@model UsalClinic.Web.ViewModels.RoomViewModel

<style>
    form.edit-room-form {
        max-width: 600px;
        margin: 1rem auto;
        background: white;
        padding: 1.5rem 2rem;
        border-radius: 0.5rem;
        box-shadow: 0 0 12px rgba(0, 122, 204, 0.2);
    }
    label {
        font-weight: 600;
        color: #005fa3;
    }
    .btn-primary {
        background-color: #007acc;
        border-color: #007acc;
    }
    .btn-primary:hover,
    .btn-primary:focus {
        background-color: #005fa3;
        border-color: #005fa3;
        box-shadow: none;
        color: white;
    }
    .form-check-label {
        font-weight: 600;
        color: #005fa3;
    }
</style>

<form id="editForm" asp-action="EditDepartment" method="post" class="edit-room-form" novalidate>
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="RoomNumber" class="form-label"></label>
        <input asp-for="RoomNumber" class="form-control" />
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RoomType" class="form-label"></label>
        <input asp-for="RoomType" class="form-control" />
        <span asp-validation-for="RoomType" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="IsAvailable" class="form-check-input" />
        <label asp-for="IsAvailable" class="form-check-label"></label>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DepartmentId" class="form-label"></label>
        <select asp-for="DepartmentId" asp-items="ViewBag.Departments" class="form-select">
            <option value="">-- Select Department --</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save changes</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
