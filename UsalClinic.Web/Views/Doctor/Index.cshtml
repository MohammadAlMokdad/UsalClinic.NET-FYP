@model IEnumerable<UsalClinic.Web.ViewModels.DoctorViewModel>

@{
    ViewData["Title"] = "Doctors";
}

<style>
    /* Gradient header */
    .table thead tr {
        background: linear-gradient(135deg, #5ddcff, #00a1cb, #007acc);
        color: white;
        font-weight: 600;
    }
    /* Row hover */
    .table tbody tr:hover {
        background-color: #e0f7ff;
    }

    /* Buttons styling */
    .btn-primary {
        background-color: #007acc;
        border-color: #007acc;
    }
    .btn-primary:hover,
    .btn-primary:focus {
        background-color: #005fa3;
        border-color: #005fa3;
        box-shadow: none;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #212529;
    }
    .btn-warning:hover,
    .btn-warning:focus {
        background-color: #d39e00;
        border-color: #d39e00;
        color: #212529;
        box-shadow: none;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }
    .btn-danger:hover,
    .btn-danger:focus {
        background-color: #b02a37;
        border-color: #b02a37;
        box-shadow: none;
    }

    /* Icon alignment */
    .btn i {
        vertical-align: middle;
        margin-right: 0.25rem;
    }
</style>

<h2 class="mb-4 text-center">@ViewData["Title"]</h2>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Add New Doctor
    </a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Profession</th>
                <th>Experience (Years)</th>
                <th>Address</th>
                <th>Gender</th>
                <th>Date of Birth</th>
                @if (User.IsInRole("Admin"))
                {
                    <th style="width: 180px;">Actions</th>
                }

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var doctor in Model)
                {
                    <tr>
                        <td>@doctor.FullName</td>
                        <td>@doctor.Profession</td>
                        <td>@doctor.YearsOfExperience</td>
                        <td>@doctor.Address</td>
                        <td>@doctor.Gender</td>
                        <td>@doctor.DateOfBirth.ToString("yyyy-MM-dd")</td>
                        @if (User.IsInRole("Admin"))
                        {
                            <td>
                                <button type="button" class="btn btn-sm btn-info me-1 btn-edit" data-id="@doctor.Id" title="Edit Doctor">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button type="button" class="btn btn-sm btn-danger btn-delete" data-id="@doctor.Id" title="Delete Doctor">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </td>
                        }
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="@(User.IsInRole("Admin") ? 7 : 6)" class="text-center">No doctors found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content" id="editModalContent">
            <!-- AJAX loaded edit form -->
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(135deg, #5ddcff, #00a1cb, #007acc); color: white; font-weight: 700;">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">Are you sure you want to delete this doctor?</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" id="deleteForm" asp-action="Delete">
                    <input type="hidden" id="deleteId" name="id" value="" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                pageLength: 10,
                order: []
            });
        });
    </script>
<script>
                    // Extract CSRF token from the hidden input on the page
        const csrfToken = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

        // Globally add CSRF token to all fetch() or AJAX calls if needed
        function getCsrfHeaders() {
            return csrfToken
                ? { 'RequestVerificationToken': csrfToken }
                : {};
        }
    // Load edit form into modal
   document.querySelectorAll('.btn-edit').forEach(btn => {
    btn.addEventListener('click', () => {
        const id = btn.getAttribute('data-id');

        fetch(`/Doctor/Edit/${id}`)
            .then(res => {
                // Case 1: Server redirected to login or access denied
                if (res.redirected) {
                    window.location.href = res.url; // Open Access Denied or Login in full page
                    return null;
                }

                // Case 2: Server returned an access denied page without redirect
                if (res.status === 403) {
                    window.location.href = '/Account/AccessDenied'; // Update this if your path differs
                    return null;
                }

                return res.text();
            })
            .then(html => {
                if (!html) return;

                // Check if it's actually the access denied HTML inside a 200 OK
                if (html.includes("<title>Access Denied</title>") || html.includes("access denied")) {
                    window.location.href = '/Account/AccessDenied';
                    return;
                }

                // Otherwise show modal normally
                document.getElementById('editModalContent').innerHTML = html;
                new bootstrap.Modal(document.getElementById('editModal')).show();
            });
    });
});
 // Handle delete button click
    document.querySelectorAll('.btn-delete').forEach(btn => {
        btn.addEventListener('click', () => {
            const id = btn.getAttribute('data-id');
            document.getElementById('deleteId').value = id;

            // Show the delete confirmation modal
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        });
    });

            // Handle Edit form submit inside modal via AJAX
            document.addEventListener('submit', function (e) {
                const form = e.target;
                if (form.closest('#editModal')) {
                    e.preventDefault();

                    fetch(form.action, {
                        method: 'POST',
                        body: new FormData(form),
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest',
                                    ...getCsrfHeaders()
                        }
                    })
                    .then(res => res.json().catch(() => null))
                    .then(result => {
                        if (result?.success) {
                            location.reload(); // Reload table or page after successful update
                        } else {
                            // Reload modal with validation errors
                            return fetch(form.action, {
                                method: 'POST',
                                body: new FormData(form),
                                headers: {
                                    'X-Requested-With': 'XMLHttpRequest',
                                            ...getCsrfHeaders()
                                }
                            })
                            .then(res => res.text())
                            .then(html => {
                                document.getElementById('editModalContent').innerHTML = html;
                            });
                        }
                    })
                    .catch(err => {
                        console.error("Edit failed", err);
                        location.reload(); // fallback on failure
                    });
                }
            });
</script>
}
