@model IEnumerable<UsalClinic.Web.ViewModels.NurseViewModel>

@{
    ViewData["Title"] = "Nurses";
}

<style>
    .table thead tr {
        background: linear-gradient(135deg, #5ddcff, #00a1cb, #007acc);
        color: white;
        font-weight: 600;
    }

    .table tbody tr:hover {
        background-color: #e0f7ff;
    }

    .btn-primary {
        background-color: #007acc;
        border-color: #007acc;
    }

        .btn-primary:hover,
        .btn-primary:focus {
            background-color: #005fa3;
            border-color: #005fa3;
            box-shadow: none;
        }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #212529;
    }

        .btn-warning:hover,
        .btn-warning:focus {
            background-color: #d39e00;
            border-color: #d39e00;
            color: #212529;
            box-shadow: none;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover,
        .btn-danger:focus {
            background-color: #b02a37;
            border-color: #b02a37;
            box-shadow: none;
        }

    .btn i {
        vertical-align: middle;
        margin-right: 0.25rem;
    }
</style>

<h2 class="mb-4 text-center">@ViewData["Title"]</h2>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Add New Nurse
    </a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Phone Number</th>
                <th>Experience (Years)</th>
                <th>Address</th>
                <th>Gender</th>
                <th>Date of Birth</th>
                @if (User.IsInRole("Admin"))
                {
                    <th style="width: 180px;">Actions</th>
                }
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var nurse in Model)
                {
                    <tr>
                        <td>@nurse.FullName</td>
                        <td>@nurse.PhoneNumber</td>
                        <td>@nurse.YearsOfExperience</td>
                        <td>@nurse.Address</td>
                        <td>@nurse.Gender</td>
                        <td>@nurse.DateOfBirth.ToString("yyyy-MM-dd")</td>
                        @if (User.IsInRole("Admin"))
                        {
                            <td>
                                <button type="button" class="btn btn-sm btn-info me-1 btn-edit" data-id="@nurse.Id" title="Edit Nurse">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button type="button" class="btn btn-sm btn-danger btn-delete" data-id="@nurse.Id" title="Delete Nurse">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </td>
                        }
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="@(User.IsInRole("Admin") ? 7 : 6)" class="text-center">No nurses found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content" id="editModalContent">
            <!-- AJAX loaded edit form -->
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(135deg, #5ddcff, #00a1cb, #007acc); color: white; font-weight: 700;">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">Are you sure you want to delete this nurse?</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" id="deleteForm" asp-action="Delete">
                    <input type="hidden" id="deleteId" name="id" value="" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                pageLength: 10,
                order: []
            });
        });
    </script>
    <script>
                        // Extract CSRF token from the hidden input on the page
        const csrfToken = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

        // Globally add CSRF token to all fetch() or AJAX calls if needed
        function getCsrfHeaders() {
            return csrfToken
                ? { 'RequestVerificationToken': csrfToken }
                : {};
        }
        document.querySelectorAll('.btn-edit').forEach(btn => {
            btn.addEventListener('click', () => {
                const id = btn.getAttribute('data-id');
                fetch(`/Nurse/Edit/${id}`)
                    .then(res => {
                        if (res.redirected || res.status === 403) {
                            window.location.href = res.url || '/Account/AccessDenied';
                            return null;
                        }
                        return res.text();
                    })
                    .then(html => {
                        if (!html) return;
                        if (html.includes("<title>Access Denied</title>") || html.includes("access denied")) {
                            window.location.href = '/Account/AccessDenied';
                            return;
                        }
                        document.getElementById('editModalContent').innerHTML = html;
                        new bootstrap.Modal(document.getElementById('editModal')).show();
                        $.validator.unobtrusive.parse($('#editModal'));
                    });
            });
        });

        document.querySelectorAll('.btn-delete').forEach(btn => {
            btn.addEventListener('click', () => {
                const id = btn.getAttribute('data-id');
                document.getElementById('deleteId').value = id;
                new bootstrap.Modal(document.getElementById('deleteModal')).show();
            });
        });

        //Handle Error Fields
                document.addEventListener('submit', function (e) {
            const form = e.target;
            if (form.closest('#editModal')) {
                e.preventDefault();

                const formData = new FormData(form);

                fetch(form.action, {
                    method: form.method,
                    body: formData,
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                        ...getCsrfHeaders()
                    }
                })
                .then(res => {
                    if (res.status === 200) {
                        return res.text();
                    } else if (res.redirected) {
                        window.location.href = res.url;
                        return null;
                    } else if (res.status === 403) {
                        window.location.href = '/Account/AccessDenied';
                        return null;
                    }
                })
                .then(html => {
                    if (!html) return;

                    // If server returned form (with validation errors), re-render inside modal
                    if (html.includes('<form') && html.toLowerCase().includes('validation-summary')) {
                        document.getElementById('editModalContent').innerHTML = html;
                        $.validator.unobtrusive.parse($('#editModalContent form'));
                    } else {
                        // Success: reload page or update table as needed
                        location.reload();
                    }
                })
                .catch(() => location.reload());
            }
        });

    </script>
}
