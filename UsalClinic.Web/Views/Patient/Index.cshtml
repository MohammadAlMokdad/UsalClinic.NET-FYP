@model IEnumerable<UsalClinic.Web.ViewModels.PatientViewModel>

@{
    ViewData["Title"] = "Patients";
}

<style>
    h2 {
        color: #007acc;
        font-weight: 700;
        margin-bottom: 1.5rem;
        text-align: center;
    }
    .btn-primary {
        background-color: #007acc;
        border-color: #007acc;
    }
    .btn-primary:hover,
    .btn-primary:focus {
        background-color: #005fa3;
        border-color: #005fa3;
        box-shadow: none;
    }
    .btn-info {
        background-color: #00a1cb;
        border-color: #00a1cb;
        color: white;
    }
    .btn-info:hover,
    .btn-info:focus {
        background-color: #007a99;
        border-color: #007a99;
        color: white;
        box-shadow: none;
    }
    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #212529;
    }
    .btn-warning:hover,
    .btn-warning:focus {
        background-color: #d39e00;
        border-color: #d39e00;
        color: #212529;
        box-shadow: none;
    }
    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }
    .btn-danger:hover,
    .btn-danger:focus {
        background-color: #b02a37;
        border-color: #b02a37;
        box-shadow: none;
    }
    .table thead tr {
        background: linear-gradient(135deg, #5ddcff, #00a1cb, #007acc);
        color: white;
        font-weight: 600;
    }
    .table tbody tr:hover {
        background-color: #e0f7ff;
    }
    .btn i {
        vertical-align: middle;
        margin-right: 0.25rem;
    }

    .action-buttons {
      display: flex;
      gap: 0.5rem; 
      flex-wrap: nowrap; 
      align-items:center;
    }

</style>

<h2>@ViewData["Title"]</h2>

<p class="text-end">
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Add New Patient
    </a>
</p>

<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Date of Birth</th>
                <th>Gender</th>
                <th>Address</th>
                <th>Major</th>
                <th>Blood Type</th>
                <th style="width: 230px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var patient in Model)
                {
                    <tr>
                        <td>@patient.FullName</td>
                        <td>@patient.DateOfBirth.ToString("yyyy-MM-dd")</td>
                        <td>@patient.Gender</td>
                        <td>@patient.Address</td>
                        <td>@patient.Major</td>
                        <td>@patient.BloodType</td>
                        <td class="action-buttons" >                        
                            @if (User.IsInRole("Admin"))
                            {
                                <button class="btn btn-warning btn-sm me-1 btn-edit" data-id="@patient.Id" title="Edit Patient">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button class="btn btn-danger btn-sm me-1 btn-delete" data-id="@patient.Id" title="Delete Patient">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            }
                            <a asp-controller="MedicalRecords" asp-action="Details" asp-route-patientId="@patient.Id" class="btn btn-info btn-sm" title="View Medical Record">
                                <i class="bi bi-file-medical"></i> M.R
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="@(User.IsInRole("Admin") ? 7 : 7)" class="text-center text-muted">No patients found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(135deg, #5ddcff, #00a1cb, #007acc); color: white; font-weight: 700;">
                <h5 class="modal-title" id="editModalLabel">Edit Patient</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="editModalBody"></div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(135deg, #5ddcff, #00a1cb, #007acc); color: white; font-weight: 700;">
                <h5 class="modal-title" id="deleteConfirmLabel">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this patient?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                <form method="post" id="deleteForm" asp-controller="Patient" asp-action="Delete">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="deletePatientId" name="id" value="" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                pageLength: 10,
                order: []
            });
        });
    </script>
    <script>
                        // Extract CSRF token from the hidden input on the page
        const csrfToken = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

        // Globally add CSRF token to all fetch() or AJAX calls if needed
        function getCsrfHeaders() {
            return csrfToken
                ? { 'RequestVerificationToken': csrfToken }
                : {};
        }
        // Edit modal with access denied logic
        document.querySelectorAll('.btn-edit').forEach(btn => {
            btn.addEventListener('click', () => {
                const id = btn.getAttribute('data-id');

                fetch(`/Patient/Edit/${id}`)
                    .then(res => {
                        if (res.redirected) {
                            window.location.href = res.url;
                            return null;
                        }

                        if (res.status === 403) {
                            window.location.href = '/Account/AccessDenied';
                            return null;
                        }

                        return res.text();
                    })
                    .then(html => {
                        if (!html) return;

                        if (html.includes('<title>Access Denied</title>') || html.toLowerCase().includes('access denied')) {
                            window.location.href = '/Account/AccessDenied';
                            return;
                        }

                        document.getElementById('editModalBody').innerHTML = html;
                        const modal = new bootstrap.Modal(document.getElementById('editModal'));
                        modal.show();
                        $.validator.unobtrusive.parse($('#editModal'));
                    });
            });
        });

        // Delete modal logic
                document.querySelectorAll('.btn-delete').forEach(btn => {
            btn.addEventListener('click', () => {
                const id = btn.getAttribute('data-id');
                document.getElementById('deletePatientId').value = id;

                const modal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
                modal.show();
            });
        });


        // Handle Error HTMLFieldSetElement empty modal
                document.addEventListener('submit', function (e) {
            const form = e.target;
            if (form.closest('#editModal')) {
                e.preventDefault(); // prevent full page reload

                const formData = new FormData(form);

                fetch(form.action, {
                    method: form.method,
                    body: formData,
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                        ...getCsrfHeaders()
                    }
                })
                .then(res => {
                    if (res.status === 200) {
                        return res.text();
                    } else if (res.redirected) {
                        window.location.href = res.url;
                        return null;
                    } else if (res.status === 403) {
                        window.location.href = '/Account/AccessDenied';
                        return null;
                    }
                })
                .then(html => {
                    if (!html) return;

                    if (html.includes('<form') && html.toLowerCase().includes('validation-summary')) {
                        // Validation errors, re-render modal content
                        document.getElementById('editModalBody').innerHTML = html;
                        $.validator.unobtrusive.parse($('#editModal'));
                    } else {
                        // Success - reload page or update UI accordingly
                        location.reload();
                    }
                })
                .catch(() => location.reload());
            }
        });

    </script>
}

