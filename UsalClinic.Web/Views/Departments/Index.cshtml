@model IEnumerable<UsalClinic.Web.ViewModels.DepartmentViewModel>

@{
    ViewData["Title"] = "Departments";
}

<style>
    /* Gradient header */
    .table thead tr {
        background: linear-gradient(135deg, #5ddcff, #00a1cb, #007acc);
        color: white;
        font-weight: 600;
    }

    /* Table rows */
    .table tbody tr {
        background-color: white;
        transition: background-color 0.3s ease;
    }
    .table tbody tr:hover {
        background-color: #e0f7ff;
    }

    /* Buttons */
    .btn-primary {
        background-color: #007acc;
        border-color: #007acc;
    }
    .btn-primary:hover,
    .btn-primary:focus {
        background-color: #005fa3;
        border-color: #005fa3;
        box-shadow: none;
    }

    .btn-info {
        background-color: #00a1cb;
        border-color: #00a1cb;
        color: white;
    }
    .btn-info:hover,
    .btn-info:focus {
        background-color: #007a99;
        border-color: #007a99;
        box-shadow: none;
        color: white;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }
    .btn-danger:hover,
    .btn-danger:focus {
        background-color: #b02a37;
        border-color: #b02a37;
        box-shadow: none;
    }

    /* Icon alignment */
    .btn i {
        vertical-align: middle;
    }
</style>

<h2 class="mb-4 text-center">@ViewData["Title"]</h2>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-circle me-2"></i> Add Department
    </a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover align-middle">
        <thead>
    <tr>
        <th>Department Name</th>
        <th>Description</th>
        @if (User.IsInRole("Admin"))
        {
            <th style="width: 220px;">Actions</th>
        }
        else
        {
            <th style="width: 120px;">View</th>
        }
    </tr>
</thead>

        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var dept in Model)
                {
                    <tr>
                        <td>@dept.Name</td>
                        <td>@dept.Description</td>
                        <td>
                            @if (User.IsInRole("Admin"))
                            {
                                <button type="button" class="btn btn-sm btn-info me-1 btn-edit" data-id="@dept.Id" title="Edit Department">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button type="button" class="btn btn-sm btn-danger me-1 btn-delete" data-id="@dept.Id" title="Delete Department">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            }

                            <a class="btn btn-sm btn-primary" asp-controller="Rooms" asp-action="ByDepartment" asp-route-id="@dept.Id" title="View Rooms">
                                <i class="bi bi-door-open"></i> Rooms
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="@(User.IsInRole("Admin") ? 3 : 2)" class="text-center">No departments available.</td>
                </tr>
            }
        </tbody>

    </table>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content" id="editModalContent">
            <!-- AJAX loaded content -->
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(135deg, #5ddcff, #00a1cb, #007acc); color: white; font-weight: 700;">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this department?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" id="deleteForm" asp-action="Delete">
                    <input type="hidden" id="deleteId" name="id" value="" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                pageLength: 10,
                order: []
            });
        });
    </script>

    <script>
               // Extract CSRF token from the hidden input on the page
        const csrfToken = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

        // Globally add CSRF token to all fetch() or AJAX calls if needed
        function getCsrfHeaders() {
            return csrfToken
                ? { 'RequestVerificationToken': csrfToken }
                : {};
        }
        // Edit modal with access denied handling
        document.querySelectorAll('.btn-edit').forEach(btn => {
            btn.addEventListener('click', () => {
                const id = btn.getAttribute('data-id');

                fetch(`/Departments/Edit/${id}`)
                    .then(res => {
                        if (res.redirected) {
                            window.location.href = res.url;
                            return null;
                        }

                        if (res.status === 403) {
                            window.location.href = '/Account/AccessDenied';
                            return null;
                        }

                        return res.text();
                    })
                    .then(html => {
                        if (!html) return;

                        if (html.includes("<title>Access Denied</title>") || html.toLowerCase().includes("access denied")) {
                            window.location.href = '/Account/AccessDenied';
                            return;
                        }

                        document.getElementById('editModalContent').innerHTML = html;
                        const editModal = new bootstrap.Modal(document.getElementById('editModal'));
                        editModal.show();
                    });
            });
        });

        // Delete confirmation modal & set form value
        document.querySelectorAll('.btn-delete').forEach(btn => {
            btn.addEventListener('click', () => {
                const id = btn.getAttribute('data-id');
                document.getElementById('deleteId').value = id;
                const deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
                deleteModal.show();
            });
        });

        // Handle error empty fields in edit form
              document.addEventListener('submit', function (e) {
            const form = e.target;
            if (form.closest('#editModal')) {
                e.preventDefault();

                fetch(form.action, {
                    method: 'POST',
                    body: new FormData(form),
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                        ...getCsrfHeaders()
                    }
                })
                .then(res => res.json().catch(() => null))
                .then(result => {
                    if (result?.success) {
                        location.reload(); 
                    } else {
                        // In case of validation error, reload modal content
                        return fetch(form.action, {
                            method: 'POST',
                            body: new FormData(form),
                            headers: {
                                'X-Requested-With': 'XMLHttpRequest'
                            }
                        })
                        .then(res => res.text())
                        .then(html => {
                            document.getElementById('editModalContent').innerHTML = html;
                        });
                    }
                })
                .catch(err => {
                    console.error('Edit failed', err);
                    location.reload();
                });
            }
        });
    </script>
}

