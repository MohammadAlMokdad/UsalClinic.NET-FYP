@model IEnumerable<UsalClinic.Web.ViewModels.MedicalRecordViewModel>

@{
    ViewData["Title"] = "Medical Records";
}

<style>
    /* Gradient header */
    .table thead tr {
        background: linear-gradient(135deg, #5ddcff, #00a1cb, #007acc);
        color: white;
        font-weight: 600;
    }

    /* Row hover */
    .table tbody tr:hover {
        background-color: #e0f7ff;
    }

    /* Buttons styling */
    .btn-primary {
        background-color: #007acc;
        border-color: #007acc;
    }

    .btn-primary:hover,
    .btn-primary:focus {
        background-color: #005fa3;
        border-color: #005fa3;
        box-shadow: none;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn-info:hover,
    .btn-info:focus {
        background-color: #117a8b;
        border-color: #117a8b;
        box-shadow: none;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-danger:hover,
    .btn-danger:focus {
        background-color: #b02a37;
        border-color: #b02a37;
        box-shadow: none;
    }

    .btn i {
        vertical-align: middle;
        margin-right: 0.25rem;
    }
</style>

<h2 class="mb-4 text-center">@ViewData["Title"]</h2>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Create New Record
    </a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Doctor</th>
                <th>Patient</th>
                <th>Diagnosis</th>
                <th>Prescription</th>
                <th>Notes</th>
                <th>Created At</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DoctorName</td>
                        <td>@item.PatientName</td>
                        <td>@item.Diagnosis</td>
                        <td>@item.Prescription</td>
                        <td>@item.Notes</td>
                        <td>@item.CreatedAt.ToString("g")</td>
                        <td>
                            <button type="button" class="btn btn-sm btn-info me-1 btn-edit" data-id="@item.Id" title="Edit Record">
                                <i class="bi bi-pencil"></i> Edit
                            </button>
                            <button type="button" class="btn btn-sm btn-danger btn-delete" data-id="@item.Id" title="Delete Record">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No medical records found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content" id="editModalContent">
            <!-- AJAX content -->
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(135deg, #5ddcff, #00a1cb, #007acc); color: white; font-weight: 700;">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">Are you sure you want to delete this medical record?</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" id="deleteForm" asp-action="Delete">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="deleteId" name="id" value="" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                pageLength: 10,
                order: []
            });
        });
    </script>
    <script>
                        // Extract CSRF token from the hidden input on the page
        const csrfToken = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

        // Globally add CSRF token to all fetch() or AJAX calls if needed
        function getCsrfHeaders() {
            return csrfToken
                ? { 'RequestVerificationToken': csrfToken }
                : {};
        }
        // Load edit form into modal with access denied handling
        document.querySelectorAll('.btn-edit').forEach(btn => {
            btn.addEventListener('click', () => {
                const id = btn.getAttribute('data-id');

                fetch(`/MedicalRecords/Edit/${id}`)
                    .then(res => {
                        if (res.redirected) {
                            window.location.href = res.url;
                            return null;
                        }

                        if (res.status === 403) {
                            window.location.href = '/Account/AccessDenied';
                            return null;
                        }

                        return res.text();
                    })
                    .then(html => {
                        if (!html) return;

                        if (html.includes("<title>Access Denied</title>") || html.toLowerCase().includes("access denied")) {
                            window.location.href = '/Account/AccessDenied';
                            return;
                        }

                        document.getElementById('editModalContent').innerHTML = html;
                        new bootstrap.Modal(document.getElementById('editModal')).show();
                        $.validator.unobtrusive.parse($('#editModalContent form'));

                    });
            });
        });

        // Delete modal setup
        document.querySelectorAll('.btn-delete').forEach(btn => {
            btn.addEventListener('click', () => {
                const id = btn.getAttribute('data-id');
                document.getElementById('deleteId').value = id;
                new bootstrap.Modal(document.getElementById('deleteModal')).show();
            });
        });

                document.addEventListener('submit', function (e) {
            const form = e.target;
            if (form.closest('#editModal')) {
                e.preventDefault(); // prevent full-page reload

                const formData = new FormData(form);

                fetch(form.action, {
                    method: form.method,
                    body: formData,
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                        ...getCsrfHeaders()
                    }
                })
                .then(res => {
                    if (res.status === 200) {
                        return res.text();
                    } else if (res.redirected) {
                        window.location.href = res.url;
                        return null;
                    } else if (res.status === 403) {
                        window.location.href = '/Account/AccessDenied';
                        return null;
                    }
                })
                .then(html => {
                    if (!html) return;

                    if (html.includes('<form') && html.toLowerCase().includes('validation-summary')) {
                        // Server returned form with validation errors, update modal content
                        document.getElementById('editModalContent').innerHTML = html;

                         $.validator.unobtrusive.parse($('#editModalContent form'));
                    } else {
                        // Success: reload the page or partial content as desired
                        location.reload();
                    }
                })
                .catch(() => {
                    // Fallback: reload page on unexpected error
                    location.reload();
                });
            }
        });

    </script>
}

