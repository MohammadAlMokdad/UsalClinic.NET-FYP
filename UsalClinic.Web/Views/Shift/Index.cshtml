@model IEnumerable<UsalClinic.Web.ViewModels.ShiftViewModel>

@{
    ViewData["Title"] = "Shifts";
}


<style>
    /* Gradient header */
    .table thead tr {
        background: linear-gradient(135deg, #5ddcff, #00a1cb, #007acc);
        color: white;
        font-weight: 600;
    }

    /* Table rows */
    .table tbody tr {
        background-color: white;
        transition: background-color 0.3s ease;
    }

        .table tbody tr:hover {
            background-color: #e0f7ff;
        }

    /* Buttons */
    .btn-primary {
        background-color: #007acc;
        border-color: #007acc;
    }

        .btn-primary:hover,
        .btn-primary:focus {
            background-color: #005fa3;
            border-color: #005fa3;
            box-shadow: none;
        }

    .btn-info {
        background-color: #00a1cb;
        border-color: #00a1cb;
        color: white;
    }

        .btn-info:hover,
        .btn-info:focus {
            background-color: #007a99;
            border-color: #007a99;
            color: white;
            box-shadow: none;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover,
        .btn-danger:focus {
            background-color: #b02a37;
            border-color: #b02a37;
            box-shadow: none;
        }

    /* Icon alignment */
    .btn i {
        vertical-align: middle;
    }
</style>


<h2 class="mb-4 text-center">@ViewData["Title"]</h2>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Add New Shift
    </a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Staff Name</th>
                <th>Role</th>
                <th>Days</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Repeats Weekly</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var shift in Model)
                {
                    <tr>
                        <td>@shift.StaffName</td>
                        <td>@shift.Role</td>
                        <td>
                            @if (shift.DaysOfWeek != null && shift.DaysOfWeek.Any())
                            {
                                string days = string.Join(", ", shift.DaysOfWeek);
                                @days
                            }
                        </td>
                        <td>@shift.StartTime</td>
                        <td>@shift.EndTime</td>
                        <td>@(shift.IsRepeatingWeekly ? "Yes" : "No")</td>
                        <td>
                            <button type="button" class="btn btn-sm btn-info me-1 btn-edit" data-id="@shift.Id" title="Edit Shift">
                                <i class="bi bi-pencil"></i> Edit
                            </button>
                            <button type="button" class="btn btn-sm btn-danger btn-delete" data-id="@shift.Id" title="Delete Shift">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No shifts found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content" id="editModalContent">
            <!-- AJAX loaded edit form -->
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">Are you sure you want to delete this shift?</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" id="deleteForm" asp-action="Delete">
                    <input type="hidden" id="deleteId" name="id" value="" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                pageLength: 10,
                order: []
            });
        });
    </script>
    <script>
                        // Extract CSRF token from the hidden input on the page
        const csrfToken = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

        // Globally add CSRF token to all fetch() or AJAX calls if needed
        function getCsrfHeaders() {
            return csrfToken
                ? { 'RequestVerificationToken': csrfToken }
                : {};
        }
        document.querySelectorAll('.btn-edit').forEach(btn => {
            btn.addEventListener('click', () => {
                const id = btn.getAttribute('data-id');
                fetch(`/Shift/Edit/${id}`)
                    .then(res => res.text())
                    .then(html => {
                        document.getElementById('editModalContent').innerHTML = html;
                        new bootstrap.Modal(document.getElementById('editModal')).show();
                        $.validator.unobtrusive.parse($('#editModal'));
                    });
            });
        });

        document.querySelectorAll('.btn-delete').forEach(btn => {
            btn.addEventListener('click', () => {
                const id = btn.getAttribute('data-id');
                document.getElementById('deleteId').value = id;
                new bootstrap.Modal(document.getElementById('deleteModal')).show();
            });
        });

                // Intercept shift edit form submission inside the modal
        document.addEventListener('submit', function(e) {
            const form = e.target;
            if (form.closest('#editModal')) {
                e.preventDefault();

                const formData = new FormData(form);

                fetch(form.action, {
                    method: form.method,
                    body: formData,
                    headers: { 
                        'X-Requested-With': 'XMLHttpRequest',
                        ...getCsrfHeaders()
                    }
                })
                .then(res => {
                    if (res.status === 200) return res.text();
                    if (res.redirected) {
                        window.location.href = res.url;
                        return null;
                    }
                    if (res.status === 403) {
                        window.location.href = '/Account/AccessDenied';
                        return null;
                    }
                    throw new Error('Unexpected response');
                })
                .then(html => {
                    if (!html) return;

                    if (html.includes('<form') && html.toLowerCase().includes('validation-summary')) {
                        // Validation errors - re-render form inside modal
                        document.getElementById('editModalContent').innerHTML = html;
                        $.validator.unobtrusive.parse($('#editModalContent form'));
                    } else {
                        // Success - close modal and reload page or update UI
                        location.reload();
                    }
                })
                .catch(() => location.reload());
            }
        });

        //Handle error empty edit modal fields
                document.addEventListener('submit', function(e) {
            const form = e.target;
            if (form.closest('#editModal')) {
                e.preventDefault(); // prevent full page reload

                const formData = new FormData(form);

                fetch(form.action, {
                    method: form.method,
                    body: formData,
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(res => {
                    if (res.status === 200) return res.text();
                    if (res.redirected) {
                        window.location.href = res.url;
                        return null;
                    }
                    if (res.status === 403) {
                        window.location.href = '/Account/AccessDenied';
                        return null;
                    }
                })
                .then(html => {
                    if (!html) return;

                    // If server returns form with validation errors
                    if (html.includes('<form') && html.toLowerCase().includes('validation-summary')) {
                        document.getElementById('editModalContent').innerHTML = html;
                    } else {
                        // Success: close modal & reload page or update UI as needed
                        location.reload();
                    }
                })
                .catch(() => {
                    // In case of error, reload page as fallback
                    location.reload();
                });
            }
        });

    </script>
}
